    <script>
        function login() {
            const email = document.getElementById('email').value;
            const msg = document.getElementById('msg');
            if (email && email.includes('@')) {
                msg.style.color = '#00d4ff';
                msg.textContent = 'You\'re in! Welcome to the beta squad';
                msg.style.opacity = 1;
            } else {
                msg.style.color = '#ff5555';
                msg.textContent = 'Please enter a valid email';
                msg.style.opacity = 1;
            }
            setTimeout(() => msg.style.opacity = 0, 4000);
        }

        function notifyOnly() {
            login(); // same behavior for now
        }

        // Floating blue particles on left side only
        const particles = document.getElementById('particles');
        function createParticle() {
            const p = document.createElement('div');
            p.style.position = 'absolute';
            p.style.width = p.style.height = Math.random() * 5 + 3 + 'px';
            p.style.background = 'rgba(0, 212, 255, 0.7)';
            p.style.borderRadius = '50%';
            p.style.left = Math.random() * 100 + '%';
            p.style.top = '-10px';
            p.style.boxShadow = '0 0 20px #00d4ff';
            p.style.animation = `drift ${Math.random() * 15 + 10}s linear forwards`;
            particles.appendChild(p);
            setTimeout(() => p.remove(), 25000);
        }

        setInterval(createParticle, 500);

        // Add drift animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes drift {
                0% { transform: translateY(-20px) translateX(0) rotate(0deg); opacity: 0; }
                10% { opacity: 0.8; }
                90% { opacity: 0.6; }
                100% { transform: translateY(100vh) translateX(${Math.random() > 0.5 ? '' : '-'}150px) rotate(360deg); opacity: 0; }
            }
        `;
        document.head.appendChild(style);
    </script>
